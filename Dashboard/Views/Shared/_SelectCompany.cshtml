<link href="https://cdn.jsdelivr.net/gh/djibe/material@4.6.2-1.0/css/material-plugins.min.css" rel="stylesheet">

<style>
    .select2-selection, #select2-CompId-results {
    }
</style>

<div class="row d-flex align-items-center justify-content-center">
    <div class="form-group col-md-12 bg-white p-2">
        @Html.DropDownList("CompId", null, " اخـتـر الـشـركـة ", htmlAttributes: new { @class = "select2-container form-select form-control", @id = "CompId", @name = "CompId", @style = "font-family: 'Droid Arabic Kufi', serif;" })
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
<script type="text/javascript">
        $(document).ready(function ()
        {
            $("#CompId").select2({
                theme: 'filled',
                //dropdownParent: "#sidenav-main"
            });

            $("#CompId option[value='Xceer_14_2022']").attr("selected", "selected");
            $("#nameComp").html($("#CompId option:selected").text());

            $('#CompId').on('select2:select', function () {
                $("#nameComp").html($("#CompId option:selected").text());
            });

            $(function () {
                $("#headerName").html($("#CompId option:selected").text());

                $("#CompId").on('change', function () {
                    $("#headerName").html($("#CompId option:selected").text());
                    //$("#CompId").attr('disabled', true);
                    //setInterval(function () {
                    //    $("#CompId").removeAttr("disabled");
                    //}, 4000);
                });
            });
        });
</script>